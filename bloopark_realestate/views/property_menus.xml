<?xml version="1.0"?>
<odoo>

    <!-- Property's main menu-->
    <record id="property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">property</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_no_content_appointment_type">
                No Property Configured
            </p>

        </field>
    </record>

    <menuitem
        id="main_menu_properties"
        name="Properties"
        sequence="10"
        action="bloopark_realestate.property_action"
        web_icon="bloopark_realestate,static/description/icon.png"
        groups="base.group_user"/>

    <!-- Property menu -->
    <menuitem
        id="menu_properties"
        parent="bloopark_realestate.main_menu_properties"
        name="Properties"
        sequence="11"/>

    <menuitem
        id="menu_property"
        parent="menu_properties"
        action="property_action"
        groups="group_property_manager"
        name="Property"/>

    <record id="property_tenancy_action" model="ir.actions.act_window">
        <field name="name">Tenancy</field>
        <field name="res_model">property.tenancy</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_no_content_appointment_type">
                No Tenancy Configured
            </p>

        </field>
    </record>

    <menuitem
        id="menu_property_tenancy"
        parent="bloopark_realestate.menu_properties"
        name="Property Tenancy"
        action = "property_tenancy_action"
        groups="group_property_manager"/>


    <record id="property_complaints_action" model="ir.actions.act_window">
        <field name="name">Complaints</field>
        <field name="res_model">property.complaint</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
