        <field name="help" type="html">
            <p class="o_view_no_content_appointment_type">
                No Complaints Recorded
            </p>

        </field>
    </record>

    <menuitem
        id="menu_property_complaint"
        parent="bloopark_realestate.menu_properties"
        name="Complaints"
        action="property_complaints_action"
        groups="group_property_manager"/>



    <menuitem
        id="menu_property_report"
        parent="bloopark_realestate.main_menu_properties"
        name="Reporting"
        sequence="15"/>

    <menuitem
        id="menu_property_report_all"
        parent="bloopark_realestate.menu_property_report"

    />

    <!-- Properties's config menu-->
    <menuitem
        id="property_menu_config"
        parent="bloopark_realestate.main_menu_properties"
        name="Configuration"
        sequence="20"
        groups="group_property_user"/>


    <record id="property_rent_type_action" model="ir.actions.act_window">
