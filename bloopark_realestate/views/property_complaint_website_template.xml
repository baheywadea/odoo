<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!-- Apply -->
    <template id="apply_complaint">
        <t t-call="website.layout">
            <t t-set="additional_title">Apply Complaint</t>

            <div id="wrap"  class="container">
                <nav aria-label="breadcrumb" class="mt-5">
                    <ol class="breadcrumb ps-0 mb-0 pb-1">
                        <li class="breadcrumb-item"><a href="#" class="text-secondary fw-bold">Complaints</a></li>

                    </ol>
                </nav>
                <h1 class="mb-4">
                    Complaint Application Form
                </h1>

                <div id="jobs_section" class="container">
                    <div class="row">
                        <section id="forms" class="col-12 col-md-9 s_website_form" data-vcss="001" data-snippet="s_website_form">
                            <div class="container">
                                <form id="property_complaint_form" action="/property/complaint/submit" method="post" enctype="multipart/form-data" class="row o_mark_required" data-mark="*" data-success-mode="redirect" data-success-page="/complaint-thank-you" hide-change-model="true">
                                    <div class="s_website_form_rows row s_col_no_bgcolor">
                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="recruitment1">
                                                    <span class="s_website_form_label_content">Your Name</span>

                                                <span class="s_website_form_mark"> *</span></label>
                                                <div class="col-sm">
                                                    <input id="recruitment1" type="text" class="form-control s_website_form_input" name="partner_name" required="" data-fill-with="name"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required" data-type="email" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="recruitment2">
                                                    <span class="s_website_form_label_content">Your Email</span>

                                                <span class="s_website_form_mark"> *</span></label>
                                                <div class="col-sm">
                                                    <input id="recruitment2" type="email" class="form-control s_website_form_input" name="email_from" required="" data-fill-with="email"/>
                                                    <div class="alert alert-warning mt-2" id="email-message" style="display:none;"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="customer_street">
                                                    <span class="s_website_form_label_content">Street</span>

                                                <span class="s_website_form_mark"> *</span></label>
                                                <div class="col-sm">
                                                    <input id="customer_street" type="text" class="form-control s_website_form_input" name="customer_street" required="" data-fill-with="customer_street"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2 s_website_form_field " data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="customer_street2">
                                                    <span class="s_website_form_label_content">Street2</span>

                                                </label>
                                                <div class="col-sm">
                                                    <input id="customer_street2" type="text" class="form-control s_website_form_input" name="customer_street2" data-fill-with="customer_street2"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="customer_city">
                                                    <span class="s_website_form_label_content">City</span>

                                                <span class="s_website_form_mark"> *</span></label>
                                                <div class="col-sm">
                                                    <input id="customer_city" type="text" class="form-control s_website_form_input" name="customer_city" required="" data-fill-with="customer_city"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="customer_house_no">
                                                    <span class="s_website_form_label_content">House No.</span>

                                                <span class="s_website_form_mark"> *</span></label>
                                                <div class="col-sm">
                                                    <input id="customer_house_no" type="text" class="form-control s_website_form_input" name="customer_house_no" required="" data-fill-with="customer_house_no"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="customer_Flat_no">
                                                    <span class="s_website_form_label_content">Flat No.</span>

                                                <span class="s_website_form_mark"> *</span></label>
                                                <div class="col-sm">
                                                    <input id="customer_Flat_no" type="text" class="form-control s_website_form_input" name="customer_Flat_no" required="" data-fill-with="customer_Flat_no"/>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-12 mb-0 py-2 s_website_form_field" data-type="text" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-4 col-sm-auto s_website_form_label" style="width: 200px" for="recruitment5">
                                                    <span class="s_website_form_label_content">Issue Description</span>
                                                    <span class="s_website_form_mark"> *</span>

                                                </label>
                                                <div class="col-sm">
                                                    <textarea id="recruitment5" class="form-control s_website_form_input" required="" placeholder="Optional introduction, or any question you might have about the jobâ€¦" name="description" rows="5"/>
                                                    <div class="alert alert-warning mt-2" id="email-message" style="display:none;"/>
                                                </div>
                                            </div>
                                        </div>

                                        <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="many2one">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ooc3recaaed">
                                                    <span class="s_website_form_label_content">Complaint Type</span>
                                                    <span class="s_website_form_mark"> *</span>
                                                </label>
                                                <div class="col-sm">
                                                    <select class="form-select s_website_form_input" style="" required="" name="type" id="type">
                                                        <option value="">Select Complaint Type</option>
                                                        <t t-foreach="complaint_type_ids" t-as="type">
                                                            <!--<span t-esc="type.name"/>-->
                                                            <option t-value="type.id"><span t-esc="type.name"/></option>
                                                        </t>

                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 mb-0 py-2 s_website_form_field s_website_form_dnone">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">

                                                <div class="col-sm">
                                                    <input id="csrf_token" type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 s_website_form_submit mb64" data-name="Submit Button">
                                            <div style="width: 200px" class="s_website_form_label"/>
                                            <button href="#" role="button" class="btn btn-primary btn-lg" id="apply-btn">Send Complaint</button>
                                            <span id="s_website_form_result"/>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>

                    </div>
                </div>
                <div class="oe_structure mt-2"/>
            </div>
        </t>
    </template>

    <!-- Thank You -->
    <record id="thankyou" model="website.page">
    <field name="url">/complaint-thank-you</field>
    <field name="is_published">True</field>
    <field name="website_indexed" eval="False"/>
    <field name="name">Thank you</field>
    <field name="type">qweb</field>
    <field name="key">bloopark_realestate.thankyou</field>
    <field name="arch" type="xml">
        <t name="Thank you (Property Complaint)" t-name="bloopark_realestate.thankyou">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure"/>
                    <div id="complaint_thankyou" class="container">
                        <div class="row pt24 pb24">
                            <div class="col pt24 pb24 text-center">
                                <h1 class="fw-bolder">Thank You !</h1>
                                <t t-set="complaint_id" t-value="request.params.get('id')"/>
                                <h2 class="fw-bolder">Your Complaint ID : <span t-esc="request.env['property.complaint'].browse(int(complaint_id)).name"/></h2>
                                <p class="fw-light pb24">
                                    Your complaint has been posted successfully,<br class="mb-2"/>
                                    We usually respond within 3 days...
                                </p>

                            </div>

                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </field>
</record>

</odoo>